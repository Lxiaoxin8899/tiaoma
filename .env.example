# 物料管理与条码生成系统 - 环境变量配置
# 复制此文件为 .env.local 并填入实际值

# =============================================================================
# Supabase 配置 (必需)
# =============================================================================
# 从 https://supabase.com 获取你的项目配置
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# =============================================================================
# 离线模式配置 (可选)
# =============================================================================
# 当设置为 true 或 Supabase 配置缺失时，应用将使用离线模式
VITE_OFFLINE=false

# =============================================================================
# 开发模式配置 (可选)
# =============================================================================
# 启用调试模式
VITE_DEBUG_MODE=false

# 日志级别: error, warn, info, debug
VITE_LOG_LEVEL=info

# =============================================================================
# 应用配置 (可选)
# =============================================================================
# 应用标题
VITE_APP_TITLE=物料管理系统

# 应用版本
VITE_APP_VERSION=1.0.0

# API 请求超时时间 (毫秒)
VITE_API_TIMEOUT=30000

# 默认分页大小
VITE_DEFAULT_PAGE_SIZE=20

# =============================================================================
# 功能开关 (可选)
# =============================================================================
# 启用条码打印功能
VITE_ENABLE_BARCODE_PRINT=true

# 启用数据分析功能
VITE_ENABLE_ANALYTICS=true

# 启用用户管理功能
VITE_ENABLE_USER_MANAGEMENT=true

# 启用系统设置功能
VITE_ENABLE_SYSTEM_SETTINGS=true

# =============================================================================
# 第三方服务配置 (可选)
# =============================================================================
# Google Analytics ID (如果使用)
# VITE_GA_ID=

# Sentry DSN (错误监控)
# VITE_SENTRY_DSN=

# =============================================================================
# 性能配置 (可选)
# =============================================================================
# 启用 React Strict Mode
VITE_STRICT_MODE=true

# 启用代码分割
VITE_ENABLE_CODE_SPLITTING=true

# 生产环境是否输出 sourcemap（默认不输出，避免源码泄露；需要排查问题时再开启）
VITE_SOURCEMAP=false

# =============================================================================
# 安全配置 (可选)
# =============================================================================
# JWT 过期时间 (小时)
VITE_JWT_EXPIRY_HOURS=24

# 会话超时时间 (小时)
VITE_SESSION_TIMEOUT_HOURS=8

# 是否记录外网 IP（默认关闭：避免请求第三方 IP 服务带来的隐私/合规风险）
VITE_ENABLE_IP_LOGGING=false

# 是否启用 Trae 徽标（默认关闭：生产环境建议避免引入不必要外链）
VITE_ENABLE_TRAE_BADGE=false

# =============================================================================
# 样式配置 (可选)
# =============================================================================
# 默认主题: light, dark, auto
VITE_DEFAULT_THEME=auto

# 是否启用 Tailwind CSS 调试
VITE_TAILWIND_DEBUG=false
